@model DVSAdmin.Models.PaginationViewModel


<nav class="govuk-pagination" aria-label="Pagination">
    <div class="govuk-pagination__prev">
        @if (Model.CurrentPage>1)
        {
            <a class="govuk-link govuk-pagination__link" href="@Url.Action(Model.Action, new { pageNumber = Model.CurrentPage - 1, CurrentSort = Model.Sort, 
                                    CurrentSortAction = Model.SortAction })" rel="prev">
                Previous
            </a>
        }
    </div>
    <ul class="govuk-pagination__list">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="govuk-pagination__item @(i == Model.CurrentPage ? "govuk-pagination__item--current" : "")">
                <a class="govuk-link govuk-pagination__link" href="@Url.Action(Model.Action, new { pageNumber = i, CurrentSort = Model.Sort, 
                                    CurrentSortAction = Model.SortAction})" aria-label="Page @i">@i</a>
            </li>
        }
    </ul>
    <div class="govuk-pagination__next">
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a class="govuk-link govuk-pagination__link" href="@Url.Action(Model.Action, new { pageNumber = Model.CurrentPage + 1, CurrentSort = Model.Sort, 
                                    CurrentSortAction = Model.SortAction })" rel="next">
                Next
            </a>
        }
    </div>
</nav>