@model DVSAdmin.BusinessLogic.Models.ServiceDto;
@using DVSAdmin.Extensions;
@using DVSAdmin.CommonUtility.Models.Enums;
@{
    ViewData["Title"] = "You have requested another primary check for this application";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">

    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">
                    You have requested another primary check for this application
                </h1>
                <div class="govuk-grid-column-full">
                    <table class="govuk-table">
                        <tbody class="govuk-table__body">
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Service name</th>
                                <td class="govuk-table__cell">@Model.ServiceName</td>
                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Service Provider</th>
                                <td class="govuk-table__cell">@Model.Provider.RegisteredName</td>
                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Conformity Assessment Body (CAB)</th>
                                <td class="govuk-table__cell">@Model.NewOrResubmission</td>
                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Days left to complete review</th>
                                <td class="govuk-table__cell">@Model.DaysLeftToComplete days</td>
                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">New application or reapplication</th>
                                <td class="govuk-table__cell">@HtmlExtensions.ToStyledStrongTag(Model.ServiceStatus)</td>
                            </tr>
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">Review status</th>
                                <td class="govuk-table__cell">
                                    @if (Model.CertificateReview != null)
                                    {
                                        @HtmlExtensions.ToStyledStrongTag(Model.CertificateReview.CertificateReviewStatus)
                                    }
                                    else
                                    {
                                        <span>No review available</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>


                <div class="govuk-grid-column-two-thirds">
                   
                    <div id="applicationSponsor-hint" class="govuk-hint">
                     We will send an email notification to the primary reviewer, within 20 minutes, asking them to redo the primary check.
                    </div>

                    @using (Html.BeginForm("PublicInterestCheck", "PublicInterestCheck", FormMethod.Get))
                    {
                        <button type="submit" class="govuk-button" data-module="govuk-button">
                            Go back to public interest check
                        </button>
                    }
                </div>

            </div>
        </div>
    </main>
</div>


