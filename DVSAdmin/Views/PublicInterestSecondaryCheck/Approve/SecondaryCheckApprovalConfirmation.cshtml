@model DVSAdmin.BusinessLogic.Models.ServiceDto;
@using DVSAdmin.Extensions;
@using DVSAdmin.CommonUtility.Models.Enums;
@{
    ViewData["Title"] = "You have approved this application";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "PublicInterestCheckConfirmApproval", "PublicInterestCheck", null, new { @class = "govuk-back-link" })
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">
                    You have approved this application
                </h1>
                <p class="govuk-body">
                    You have successfully approved public interest checks for the following application:
                </p>
                <hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible">

                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header"> Service provider</th>
                            <th scope="col" class="govuk-table__header">Service name</th>
                            <th scope="col" class="govuk-table__header">Conformity <br />Assessment <br />Body</th>
                            <th scope="col" class="govuk-table__header">Time submitted (UTC)</th>
                            <th scope="col" class="govuk-table__header">Review status</th>
                            <th scope="col" class="govuk-table__header">Time and date of decision (UTC)</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">@Model.Provider.RegisteredName</td>
                            <td class="govuk-table__cell">@Model.ServiceName</td>
                            <td class="govuk-table__cell">@Model.CabUser.Cab.CabName</td>
                            <td class="govuk-table__cell">@DateTimeExtensions.FormatDateTime(Model.ModifiedTime)</td>
                            <td class="govuk-table__cell">@HtmlExtensions.ToStyledStrongTag(PublicInterestCheckEnum.PublicInterestCheckPassed)</td>
                            <td class="govuk-table__cell">@DateTimeExtensions.FormatDateTime(DateTime.UtcNow, "h:mm tt; d MMM yyyy")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body">
                    The Digital Identity Register Portal inbox will receive an email notification within 20 minutes.
                </p>

                <p class="govuk-body">
                    The provider will receive an email asking for their agreement to publish the service on the register.
                </p>

                @using (Html.BeginForm("PublicInterestCheck", "PublicInterestCheck", FormMethod.Get))
                {
                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        Go back to public interest check
                    </button>
                }
            </div>
        </div>
    </main>
</div>




