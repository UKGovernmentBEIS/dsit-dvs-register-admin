@model DVSAdmin.BusinessLogic.Models.ServiceDto;
@using DVSAdmin.Extensions;
@using DVSAdmin.CommonUtility.Models.Enums;
@{
    ViewData["Title"] = "You have published services on the register";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">
                    @ViewData["Title"]
                </h1>
                <p class="govuk-body">
                    You have successfully published the following service:
                </p>

                <dl class="govuk-summary-list">
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">Service name</dt>
                        <dd class="govuk-summary-list__value">@Model.ServiceName</dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">Service provider</dt>
                        <dd class="govuk-summary-list__value">@Model.Provider.RegisteredName</dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">Time and date of publication (GMT)</dt>
                        <dd class="govuk-summary-list__value">@DateTimeExtensions.FormatDateTime(Model.PublishedTime, "d MMM yyyy, hh:mm tt")</dd>
                    </div>              
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">New application or reapplication</dt>
                        <dd class="govuk-summary-list__value">  @Model.NewOrResubmission</dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">Review status</dt>
                        <dd class="govuk-summary-list__value">@HtmlExtensions.ToStyledStrongTag(Model.ServiceStatus)</dd>
                    </div>
                </dl>
            </div>

            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body">
                    The service provider, the Conformity Assessment Body and OfDIA will receive
                    an email notification of the publication within 20 minutes.
                </p>

                <a href="@Url.Action("PublicInterestCheck","PublicInterestCheck")" role="button" draggable="false" class="govuk-button"
                   data-module="govuk-button">
                    Go back to public interest check
                </a>
              
            </div>
        </div>
    </main>
</div>




