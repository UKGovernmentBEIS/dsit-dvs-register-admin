@model DVSAdmin.Models.PublicInterestCheckViewModel;
@using Newtonsoft.Json
@using DVSAdmin.Extensions;
@{
    ViewData["Title"] = "You are about to confirm this service has failed the primary public interest check";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "PrimaryCheckReview", "PublicInterestPrimaryCheck", null, new { @class = "govuk-back-link" })
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">
                    You are about to confirm this service has failed the primary public interest check</h1>
                   
                <p class="govuk-body">
                     If you need to, you can go back to the application review screens to make changes by selecting the
                     'Cancel and back' button.
                </p>

                    <div class="govuk-form-group">
                        <h1 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--l" for="more-detail">
                                Comment (required)
                            </label>
                        </h1>
                        <div id="more-detail-hint" class="govuk-hint">
                            State the reasons that the primary interest checks have failed. This
                            information will only be seen by other OFDIA users.
                        </div>
                        <textarea class="govuk-textarea" id="more-detail" name="moreDetail" rows="8" aria-describedby="more-detail-hint"></textarea>
                    </div>

                <h2 class="govuk-heading-m">What happens next</h2>

                <p class="govuk-body">
                    Once you select the 'Fail primary check' button, we will send an email to the DI Register Notifications inbox.
                    Another OFDIA user must then conduct the secondary public interest check.
                </p>
                @using (Html.BeginForm("SavePrimaryCheckFailed", "PublicInterestPrimaryCheck", FormMethod.Post))
                {
                    <div class="govuk-button-group">

                        <button type="submit" class="govuk-button govuk-button--warning" data-module="govuk-button" name="saveReview" value="save">
                            Fail primary check
                        </button>
                        <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button" name="saveReview" value="cancel">
                            Cancel and back 
                        </button>
                    </div>
                }
            </div>
        </div>
    </main>
</div>

