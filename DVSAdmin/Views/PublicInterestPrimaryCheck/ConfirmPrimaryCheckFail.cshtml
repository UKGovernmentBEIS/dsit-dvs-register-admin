@model DVSAdmin.Models.PublicInterestPrimaryCheckViewModel;
@using Newtonsoft.Json
@using DVSAdmin.Extensions;
@{
    ViewData["Title"] = "You are about to confirm this service has failed the primary public interest check";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
    bool isValid = true;
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "PrimaryCheckReview", "PublicInterestPrimaryCheck", new {serviceId = Model.ServiceId}, new { @class = "govuk-back-link" })
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                @if (Html.ViewData?.ModelState.ContainsKey("PrimaryCheckComment") == true && Html.ViewData.ModelState["PrimaryCheckComment"].Errors.Count > 0)
                {
                    isValid = false;
                    ViewData["Title"] = "Error: " + ViewData["Title"];
                    @await Html.PartialAsync("~/Views/PartialViews/_SpecificErrorsView.cshtml",
                             new Tuple<string, IEnumerable<Microsoft.AspNetCore.Mvc.ModelBinding.ModelError>>("PrimaryCheckComment", Html.ViewData.ModelState["PrimaryCheckComment"]?.Errors))
                }
                <h1 class="govuk-heading-xl">
                    You are about to confirm this service has failed the primary public interest check</h1>
                   
                <p class="govuk-body">
                     If you need to, you can go back to the application review screens to make changes by selecting the
                     'Cancel and back' button.
                </p>

                @using (Html.BeginForm("SavePrimaryCheckFailed", "PublicInterestPrimaryCheck", FormMethod.Post))
                {
                   
                @if (!isValid)
                {
                    <div class="govuk-form-group govuk-form-group--error">
                        <h3 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--s" for="primarycheckcomment">
                                Comment required
                            </label>
                        </h3>

                        <div id="primarycheckcomment-hint" class="govuk-hint">
                            If you have marked any item as Reject, you should provide further details. If all
                            sections are marked Approve, please provide a note to confirm below
                        </div>

                        <p id="primarycheckcomment-error" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span>  @Html.ValidationMessageFor(m => m.PrimaryCheckComment)
                        </p>
                        @Html.TextAreaFor(model => model.PrimaryCheckComment, new { @class = "govuk-textarea govuk-textarea--error", @id = "primarycheckcomment", @name = "primarycheckcomment-name", @rows = "5", @aria_describedby = "primarycheckcomment-hint primarycheckcomment-error" })
                    </div>

                }
                else
                {
                    <div class="govuk-form-group">
                        <h3 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--s" for="primarycheckcomment">
                                Comment required
                            </label>
                        </h3>

                        <div id="primarycheckcomment-hint" class="govuk-hint">
                            If you have marked any item as Reject, you should provide further details. If all
                            sections are marked Approve, please provide a note to confirm below
                        </div>

                        @Html.TextAreaFor(model => model.PrimaryCheckComment, new { @class = "govuk-textarea", @id = "primarycheckcomment", @name = "primarycheckcomment-name", @rows = "5", @aria_describedby = "primarycheckcomment-hint" })
                    </div>

                }

                <h2 class="govuk-heading-m">What happens next</h2>

                <p class="govuk-body">
                    Once you select the 'Fail primary check' button, we will send an email to the DI Register Notifications inbox.
                    Another OFDIA user must then conduct the secondary public interest check.
                </p>
               
                    <div class="govuk-button-group">

                        <button type="submit" class="govuk-button govuk-button--warning" data-module="govuk-button" >
                            Fail primary check
                        </button>
                        <a href="@Url.Action("PrimaryCheckReview","PublicInterestPrimaryCheck", new {serviceId = Model.ServiceId})" role="button" draggable="false" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            Cancel and back
                        </a>
                    </div>
                }
            </div>
        </div>
    </main>
</div>

