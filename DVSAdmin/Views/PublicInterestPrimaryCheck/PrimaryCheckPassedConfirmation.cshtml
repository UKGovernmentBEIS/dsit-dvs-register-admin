@model DVSAdmin.BusinessLogic.Models.ServiceDto;
@using Newtonsoft.Json
@using DVSAdmin.CommonUtility.Models.Enums;
@using DVSAdmin.Extensions;
@{
    ViewData["Title"] = "Passed primary check confirmation";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}



<div class="govuk-width-container">

    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">
                    Passed primary check confirmation
                </h1>
                <p class="govuk-body">
                    You have confirmed the following application has passed the primary <br />check:
                </p>
                <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Service provider</th>
                            <th scope="col" class="govuk-table__header">Service name</th>
                            <th scope="col" class="govuk-table__header">Conformity Assessment Body</th>
                            <th scope="col" class="govuk-table__header">Time submitted (UTC)</th>
                            <th scope="col" class="govuk-table__header">Review status</th>
                            <th scope="col" class="govuk-table__header">Days left to <br />complete <br />review</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">@Model.Provider.RegisteredName</td>
                            <td class="govuk-table__cell">@Model.ServiceName</td>
                            <td class="govuk-table__cell">@Model.CabUser.Cab.CabName</td>
                            <td class="govuk-table__cell">@DateTimeExtensions.FormatDateTime(Model.CreatedTime)</td>
                            <td class="govuk-table__cell">@HtmlExtensions.ToStyledStrongTag(PublicInterestCheckEnum.PrimaryCheckPassed)</td>
                            <td class="govuk-table__cell">@Model.DaysLeftToComplete  days</td>
                        </tr>
                    </tbody>
                </table>

                <p class="govuk-body">
                    This application will be moved to the secondary check tab. A second reviewer will need to approve this decision. An email notification of this status update will be sent to the Digital Identity Register Portal inbox within the next 20 minutes.
                </p>

                <a href="/public-interest-check/public-interest-check-list" type="submit" class="govuk-button" data-module="govuk-button">
                    Go back to public interest check
                </a>

            </div>
        </div>
    </main>
</div>
