@model CertificateValidationViewModel
@{
    ViewData["Title"] = "ApprovalConfirmation";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "CertificateReview", "CertificateReview", null, new { @class = "govuk-back-link" })
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">You have approved this submission</h1>

                <p class="govuk-body">
                    You have successfully approved the submission.
                </p>
            </div>



            @await Html.PartialAsync("~/Views/CertificateReview/PartialViews/_ServiceDetailsView.cshtml", Model.Service)



            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body">
                    The Conformity Assessment Body and DSIT will receive an email notification of the submission decision within 20 minutes.
                </p>
                <a href="/certificate-review/certificate-review-list" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
                    Go back to certificate review
                </a>             
               
            </div>
        </div>
    </main>

</div>


