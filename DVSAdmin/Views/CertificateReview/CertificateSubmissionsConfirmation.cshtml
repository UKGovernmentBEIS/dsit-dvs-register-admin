@{
    ViewData["Title"] = "You are about to approve this submission - GOV.UK";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "PreRegistrationReview", "PreRegistrationReview", null, new { @class = "govuk-back-link" })
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">You are about to approve this submission</h1>

                <p class="govuk-body">
                    The Conformity Assessment Body and OfDIA will receive confirmation of this decision. The provider will also receive an email requesting for consent to publish their information.
                </p>
                <div class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-visually-hidden">Warning</span>
                        Once you approve this submission, the action can’t be undone.
                    </strong>
                </div>
                <div class="govuk-button-group">
                    <button type="submit" class="govuk-button" data-module="govuk-button" name="approveSubmission" value="approveSubmission">
                        Approve submission
                    </button>
                    <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button" name="cancelApproval" value="cancelApproval">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </main>

</div>

