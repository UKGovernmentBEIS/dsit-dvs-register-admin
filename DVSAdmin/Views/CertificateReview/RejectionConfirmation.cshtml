@model DVSAdmin.Models.CertificateValidationViewModel;
@using Newtonsoft.Json
@using DVSAdmin.CommonUtility.Models.Enums;
@using DVSAdmin.Extensions;
@{
    ViewData["Title"] = "You have rejected this submission";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">

    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>


                @await Html.PartialAsync("~/Views/CertificateReview/PartialViews/_ServiceDetailsView.cshtml", Model.Service)

                <p class="govuk-body">
                    We will email CAB and OFDIA with this decision within 20 minutes.
                </p>


                <div class="govuk-button-group">

                    <a href="/certificate-review/certificate-review-list" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
                        Go back to certificate review
                    </a>

                </div>


            </div>
        </div>
    </main>
</div>








