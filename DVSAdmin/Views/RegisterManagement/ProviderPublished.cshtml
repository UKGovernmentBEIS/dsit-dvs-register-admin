@{
    ViewData["Title"] = "You have published this service provider on the register";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "ProviderReview", "ProviderReview", null, new { @class = "govuk-back-link" })
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">You have published this service provider on the register</h1>
                <p class="govuk-body">You have successfully published the following service provider:</p>


                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Service provider</th>
                            <th scope="col" class="govuk-table__header">Publication status</th>
                            <th scope="col" class="govuk-table__header">Time and date of provider consent to publish</th>
                            <th scope="col" class="govuk-table__header">Conformity Assessment Body</th>
                            <th scope="col" class="govuk-table__header">Services</th>
                        </tr>
                    </thead>

                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">

                            <td class="govuk-table__cell"> @Html.ActionLink("Northrow  Limited", "RegisterManagementSubmissionDetails", "RegisterManagement", null, new { @class = "govuk-link" })</td>
                            <td class="govuk-table__cell">
                                <strong class="govuk-tag govuk-tag--blue">
                                    Published
                                </strong>
                            </td>
                            <td class="govuk-table__cell">10:24 am; 1 Mar 2024</td>
                            <td class="govuk-table__cell">Kantara</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-!-margin-bottom-1">Tenant eligibility checker</div>
                                <div class="govuk-!-margin-bottom-1">Online identity assurance</div>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body">The service provider, the Conformity Assessment Body and OfDIA will receive an email notification of the publication within 20 minutes.</p>

                <div class="govuk-button-group" id="submitvalidation">
                    <button type="submit" class="govuk-button" data-module="govuk-button" name="goBack" value="approve">
                        Go back to register management
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

