@model ServiceDetailsViewModel;
@{
    ViewData["Title"] = "Service 1 details: Remote Verify";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "ProviderDetails", "RegisterManagement", new { @providerId  = Model.CertificateInformation.ProviderId}, new { @class = "govuk-back-link" })
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">

            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">Service @Model.ServiceNumber details: Remote Verify </h1>
                @await Html.PartialAsync("~/Views/PartialViews/_ServiceDetailsView.cshtml", Model.CertificateInformation)

            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h2 class="govuk-heading-m">Provided certificate of conformity</h2>
                <p class="govuk-body-l govuk-!-margin-bottom-2">
                    @Model.CertificateInformation.FileName
                </p>
                <p class="govuk-body govuk-!-margin-bottom-2">
                    <span class="govuk-hint">
                        PDF, 19.5 KB, 1 page
                    </span>
                </p>
                <p class="govuk-body">
                    <span class="govuk-hint">
                        This file may not be suitable for users of assistive technology.
                    </span>
                </p>

                <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button" name="downloadCertificate">
                    Download certificate of conformity
                </button>
            </div>
        </div>
    </main>
</div>

