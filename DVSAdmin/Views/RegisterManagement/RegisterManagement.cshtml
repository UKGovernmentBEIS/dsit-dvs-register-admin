@model DVSAdmin.Models.RegManagement.ProviderListViewModel;
@using DVSAdmin.CommonUtility.Models.Enums;
@{
    ViewData["Title"] = "Register Management";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full govuk-!-padding-bottom-5">
                <div class="govuk-breadcrumbs">
                    <ol class="govuk-breadcrumbs__list">
                        <li class="govuk-breadcrumbs__list-item">
                            @Html.ActionLink("Home", "LandingPage", "DigitalIdentity", null, new { @class = "govuk-breadcrumbs__link" })
                        </li>
                        <li class="govuk-breadcrumbs__list-item">
                            @Html.ActionLink("Register management", "RegisterManagement", "RegisterManagement", null, new { @class = "govuk-breadcrumbs__link" })
                        </li>
                    </ol>
                </div>
                <h1 class="govuk-heading-xl">Register management</h1>
                <div class="govuk-tabs" data-module="govuk-tabs">
                    <ul class="govuk-tabs__list">
                        <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
                            <a class="govuk-tabs__tab" href="#action-required">
                                Action required
                            </a>
                        </li>
                        <li class="govuk-tabs__list-item">
                            <a class="govuk-tabs__tab" href="#publications-complete">
                                Publication complete
                            </a>
                        </li>
                    </ul>

                    <div class="govuk-tabs__panel" id="action-required">
                        @await Html.PartialAsync("~/Views/RegisterManagement/PartialViews/_ActionRequiredView.cshtml", Model)
                    </div>
                    <div class="govuk-tabs__panel" id="publications-complete">
                        @await Html.PartialAsync("~/Views/RegisterManagement/PartialViews/_PublicationCompleteView.cshtml", Model)
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

